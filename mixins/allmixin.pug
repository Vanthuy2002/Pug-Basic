        .diamond-item 
            .diamond-wrapper 
                img.img-diamond(src=val, alt="")
                .diamond-overlay 
                .diamond-desc 
                    p.diamond-title=title 
                    span.diamond-time=time

mixin buttonTravel()
    a.btn-travel(href="#!") Explore All

mixin footerItem(header)
    h4.footer-header=header 
    ul.footer-list 
        each val in ["Trip Planner", "Trip Guide", "Trip Planing","Tour Package","Tour advice"]
            li.footer-item 
                a.footer-link(href="#!")=val 
